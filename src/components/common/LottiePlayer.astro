---
const { src, class: cls = '', speed = 1, loop = true, autoplay = true } = Astro.props;
---

<div class={cls}>
  <lottie-player
    src={src}
    background="transparent"
    speed={speed}
    loop={loop}
    autoplay={autoplay}
    renderer="svg"
    class="w-full h-full invert dark:invert-0 intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
    aria-hidden="true"
  ></lottie-player>
</div>
